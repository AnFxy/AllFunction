<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <!-- Base application theme. -->
    <style name="Theme.AllFunction" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#eeddff</item>
        <item name="colorPrimaryVariant">#00000000</item>
        <item name="android:windowBackground">@drawable/titlebar_bg</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="litteCircle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:src">@drawable/little_circle</item>
    </style>

    <style name="nextLastText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="editText">
        <item name="android:layout_weight">5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="alpha">0.4</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:maxLength">11</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="loginPassText">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_weight">1.1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="loginPassImage">
        <item name="android:layout_weight">0.7</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>

    </style>

    <style name="loginPassCheckIcon">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:src">@drawable/icn_select</item>
    </style>

    <style name="netDataHome">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
    </style>

    <style name="dataBaseHome">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>
</resources>