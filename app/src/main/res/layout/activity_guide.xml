<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.GuideActivity">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:id="@+id/ll_circle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#ffffff"
                android:alpha="0.5"
                >
                <ImageView
                   style="@style/litteCircle"/>
                <ImageView
                    style="@style/litteCircle"/>
                <ImageView
                    style="@style/litteCircle"/>
                <ImageView
                    style="@style/litteCircle"/>
                <ImageView
                    style="@style/litteCircle"/>
                <ImageView
                    style="@style/litteCircle"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_choose_circle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="10dp"
                android:src="@drawable/little_circle_choosed"
                app:layout_constraintTop_toTopOf="@id/ll_circle"
                app:layout_constraintBottom_toBottomOf="@id/ll_circle"
                app:layout_constraintLeft_toLeftOf="@id/ll_circle"
                app:layout_constraintRight_toRightOf="@id/ll_circle" />
            <TextView
                android:id="@+id/tv_left"
                style="@style/nextLastText"
                android:visibility="invisible"
                android:text="上一个"
                android:layout_marginLeft="12dp"
                android:drawableLeft="@drawable/icn_chevron_left_tuto"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tv_right"
                style="@style/nextLastText"
                android:text="下一个"
                android:layout_marginRight="12dp"
                android:drawableRight="@drawable/icn_chevron_right_tuto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
